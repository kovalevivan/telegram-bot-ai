# App
APP_NAME="Telegram Bot AI Integrator"
HOST="0.0.0.0"
PORT="8080"

# UI admin (session-based)
SECRET_KEY="change-me-please"
ADMIN_USERNAME="admin"
ADMIN_PASSWORD="admin"

# Database
# SQLite (default): sqlite+aiosqlite:///./data/app.db
# Postgres example: postgresql+asyncpg://user:pass@localhost:5432/telegram_ai
DATABASE_URL="sqlite+aiosqlite:///./data/app.db"

# LLM (OpenAI-compatible)
LLM_BASE_URL="https://api.openai.com"
LLM_API_KEY=""
LLM_DEFAULT_MODEL="gpt-4o-mini"
# Auth header/prefix (for OpenAI: Authorization + Bearer)
# Examples:
#   LLM_AUTH_HEADER="Authorization"
#   LLM_AUTH_PREFIX="Bearer"
# If provider uses api key header: set header and disable prefix:
#   LLM_AUTH_HEADER="X-API-Key"
#   LLM_AUTH_PREFIX="none"
LLM_AUTH_HEADER="Authorization"
LLM_AUTH_PREFIX="Bearer"

# Timeweb Agents example (base url already ends with /v1):
# LLM_BASE_URL="https://agent.timeweb.cloud/api/v1/cloud-ai/agents/<agent_id>/v1"
# LLM_API_KEY="<your JWT/API token, NOT agent_id>"

# Debug: log incoming Puzzlebot integration requests
LOG_INCOMING_PUZZLEBOT="1"
LOG_INCOMING_PUZZLEBOT_BODY="1"


